<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="PairGenerator.PairGeneratorWindow"
        Title="PairGenerator" Height="350" Width="525">
    <Grid>

        <syncfusion:IntegerTextBox x:Name="Minimum" ToolTip="Минимальный идентификатор" HorizontalAlignment="Left" Margin="10,10,0,0" MinWidth="100" NumberGroupSeparator="," TextWrapping="Wrap" Value="0" VerticalAlignment="Top" Width="120"/>
        <syncfusion:IntegerTextBox x:Name="Maximum" ToolTip="Максимальный идентификатор" HorizontalAlignment="Left" Margin="135,10,0,0" MinWidth="100" NumberGroupSeparator="," TextWrapping="Wrap" Value="100000" VerticalAlignment="Top" Width="120"/>
        <syncfusion:IntegerTextBox x:Name="Components" ToolTip="Количество отдельных компонент" HorizontalAlignment="Left" Margin="10,35,0,0" MinWidth="100" NumberGroupSeparator="," TextWrapping="Wrap" Value="100" VerticalAlignment="Top" Width="120"/>
        <syncfusion:IntegerTextBox x:Name="Pairs" ToolTip="Количество пар" HorizontalAlignment="Left" Margin="135,35,0,0" MinWidth="100" NumberGroupSeparator="," TextWrapping="Wrap" Value="10000000" VerticalAlignment="Top" Width="120"/>
        <Button Click="GeneratePairs" Content="Генерировать" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,112,0,0" Width="120"/>
        <syncfusion:IntegerTextBox x:Name="FileName" ToolTip="Имя выходного файла" HorizontalAlignment="Left" Margin="10,59,0,0" MinWidth="100" NumberGroupSeparator="," TextWrapping="Wrap" Value="0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="OutPath" HorizontalAlignment="Left" Height="23" Margin="10,84,0,0" TextWrapping="Wrap" Text="1FromGenerator" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
