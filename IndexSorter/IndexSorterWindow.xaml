<Window xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  x:Class="IndexSorter.IndexSorterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IndexSorterWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Сортировать" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="120" Click="Sort_Click" Height="23"/>
        <TextBox x:Name="InPath" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="1FromGenerator" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="OutPath" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="2FromSorter" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Status" Content="" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="499"/>
        <syncfusion:IntegerTextBox x:Name="FileName" ToolTip="Начальное имя выходных файлов" HorizontalAlignment="Left" Margin="135,35,0,0" MinWidth="100" NumberGroupSeparator="," TextWrapping="Wrap" Value="0" VerticalAlignment="Top" Width="120"/>
        <syncfusion:IntegerTextBox x:Name="MaxFileSize" ToolTip="Максимальный размер каждого выходного индекс-файла" HorizontalAlignment="Left" Margin="260,35,0,0" MinWidth="100" NumberGroupSeparator="," TextWrapping="Wrap" Value="80000000" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
